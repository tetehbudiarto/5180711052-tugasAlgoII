
#include<iostream>
#include <iomanip>
#include <conio.h>
using namespace std;

int main()
{
	int a[50],n,i,j,temp;
	cout<<"Jumlah data Yang akan dimasukkan :";
	cin>>n;
	cout<<"Masukkan data berupa angka\n";

	for(i=0;i<n;++i)
{cout<<"data ke-"<<i+1<<" :";cin>>a[i];}

cout<<"\nSebelum urut :\n";
for (i=0;i<n;i++){
        cout<<setw(3)<<a[i];}

	for(i=1;i<n;++i)
	{
		for(j=0;j<(n-i);++j)
			if(a[j]>a[j+1])
			{
				temp=a[j];
				a[j]=a[j+1];
				a[j+1]=temp;
			}
	}

	cout<<"\n\nsetelah urut :\n";
	for(i=0;i<n;++i)
		cout<<" "<<a[i];



cout<<endl<<endl<<endl;
	return 0;
}
